@model Gestion_Centre_Formations.Models.Participant

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow hover-lift">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Edit Profile</h3>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("Edit", "Profile", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.ParticipantID) <!-- Pass the ID -->

                        <!-- User fields -->
                        <div class="mb-3 row">
                            <label for="Prenom" class="col-sm-4 col-form-label">First Name</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Prenom, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Prenom, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label for="Nom" class="col-sm-4 col-form-label">Last Name</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Nom, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Nom, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label for="Email" class="col-sm-4 col-form-label">Email</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label for="NumTel" class="col-sm-4 col-form-label">Phone Number</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.NumTel, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.NumTel, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Participant-specific fields -->
                        <div class="mb-3 row">
                            <label for="Password" class="col-sm-4 col-form-label">Password</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password", @autocomplete = "new-password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save me-2"></i>Save Changes
                            </button>
                            <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">
                                <i class="fa fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
