@model IEnumerable<Gestion_Centre_Formations.Models.Formation>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Accueil";
}
<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5">
    <div class="owl-carousel header-carousel position-relative">
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/assets/img/carous1.jpg" alt="Online Learning Platform">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-sm-10 col-lg-8">
                            <h5 class="text-primary text-uppercase mb-3 animated slideInDown">Transform Your Future</h5>
                            <h1 class="display-3 text-white animated slideInDown">Learn Anytime, Anywhere</h1>
                            <p class="fs-5 text-white mb-4 pb-2">Discover a world of knowledge with our flexible online courses. Whether you're advancing your career or exploring new interests, we provide the tools to help you succeed.</p>
                            <a href="@Url.Action("Index", "Formations")" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Explore Courses</a>
                            <a href="@Url.Action("SignUp", "Authentification")" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Sign Up Today</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/assets/img/carous2.jpg" alt="Online Education">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-sm-10 col-lg-8">
                            <h5 class="text-primary text-uppercase mb-3 animated slideInDown">Expert-Led Courses</h5>
                            <h1 class="display-3 text-white animated slideInDown">Achieve Your Goals with Us</h1>
                            <p class="fs-5 text-white mb-4 pb-2">Join thousands of learners worldwide and gain access to high-quality courses taught by industry experts. Start your journey to success today!</p>
                            <a href="" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">View Programs</a>
                            <a href="@Url.Action("SignUp", "Authentification")" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Get Started</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/assets/img/carous3.jpg" alt="Interactive Learning">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-sm-10 col-lg-8">
                            <h5 class="text-primary text-uppercase mb-3 animated slideInDown">Interactive & Engaging</h5>
                            <h1 class="display-3 text-white animated slideInDown">Learn by Doing</h1>
                            <p class="fs-5 text-white mb-4 pb-2">Our hands-on approach ensures you gain practical skills that matter. Engage with interactive content, real-world projects, and a supportive community.</p>
                            <a href="@Url.Action("Index", "Aropos")" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">See How It Works</a>
                            <a href="@Url.Action("SignUp", "Authentification")" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Join Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->
<!-- Service Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item text-center pt-3">
                    <div class="p-4">
                        <i class="fa fa-3x fa-graduation-cap text-primary mb-4"></i>
                        <h5 class="mb-3">Expert Instructors</h5>
                        <p>Learn from industry professionals with years of experience and a passion for teaching.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item text-center pt-3">
                    <div class="p-4">
                        <i class="fa fa-3x fa-globe text-primary mb-4"></i>
                        <h5 class="mb-3">Flexible Learning</h5>
                        <p>Access courses anytime, anywhere, and learn at your own pace with our online platform.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item text-center pt-3">
                    <div class="p-4">
                        <i class="fa fa-3x fa-laptop-code text-primary mb-4"></i>
                        <h5 class="mb-3">Hands-On Projects</h5>
                        <p>Gain practical experience with real-world projects that prepare you for the job market.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.7s">
                <div class="service-item text-center pt-3">
                    <div class="p-4">
                        <i class="fa fa-3x fa-book-open text-primary mb-4"></i>
                        <h5 class="mb-3">Resource Library</h5>
                        <p>Explore a vast collection of books, articles, and resources to support your learning journey.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".owl-carousel").owlCarousel({
            items: 1,
            loop: true,
            nav: true,
            dots: true,
            autoplay: true,
            autoplayTimeout: 3000,
            autoplayHoverPause: true
        });
    });
</script>






