        </section>

        <!-- Popular Courses Section -->
        <section class="courses-section">
            <h2 class="section-title">Nos formations les plus populaires</h2>
            <div class="row">
                @foreach (var formation in Model.PopularFormations)
                {
                    <div class="col-md-4">
                        <div class="course-card">
                            <div class="course-image">
                                <div class="category-badge">Formation</div>
                            </div>
                            <div class="course-content">
                                <h3 class="course-title">@formation.Titre</h3>
                                <p class="course-description">@formation.Description</p>
