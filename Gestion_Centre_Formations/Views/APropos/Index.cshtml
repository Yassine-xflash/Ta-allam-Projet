<style>
    /* Base Styles */
    .about-page {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        line-height: 1.6;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, 
        0%, #8878e9 100%);
        padding: 100px 0 80px;
        color: white;
        position: relative;
        overflow: hidden;
    }

        .hero-section::after {
            content: '';
            position: absolute;
            bottom: -50%;
            right: -20%;
            width: 80%;
            height: 120%;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            transform: rotate(-15deg);
        }

    .hero-title {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
        max-width: 800px;
    }

    /* Section Styles */
    .section-title {
        font-size: 2rem;
        font-weight: 600;
        margin: 3rem 0 2rem;
        color: #2c3e50;
        position: relative;
        padding-bottom: 1rem;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background: #0d6efd;
        }

    /* Statistics Cards */
    .stats-section {
        padding: 40px 0;
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        margin-bottom: 30px;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon {
        font-size: 2.5rem;
        color: #0d6efd;
        margin-bottom: 1rem;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: #666;
        font-size: 1.1rem;
    }

    /* Course Cards */
    .course-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        transition: transform 0.3s ease;
    }

        .course-card:hover {
            transform: translateY(-5px);
        }

    .course-image {
        height: 200px;
        background: linear-gradient(45deg, #0d6efd, #8878e9);
        position: relative;
    }

    .category-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(255, 255, 255, 0.9);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        color: #0d6efd;
    }

    .course-content {
        padding: 1.5rem;
    }

    .course-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .course-description {
        color: #666;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .course-button {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        background: #0d6efd;
        color: white;
        text-decoration: none;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

        .course-button:hover {
            background: #6557c6;
            transform: translateY(-2px);
            color: white;
            text-decoration: none;
        }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .hero-section {
            padding: 60px 0 40px;
        }

        .hero-title {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1rem;
        }

        .stat-card {
            margin-bottom: 20px;
        }
    }
</style>

