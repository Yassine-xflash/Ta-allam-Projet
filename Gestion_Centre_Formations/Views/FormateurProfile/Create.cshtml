@model Gestion_Centre_Formations.Models.Formation

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Créer une nouvelle formation</h3>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.Titre, "Titre")
                                @Html.EditorFor(model => model.Titre, new { htmlAttributes = new { @class = "form-control", placeholder = "Titre de la formation" } })
                                @Html.ValidationMessageFor(model => model.Titre, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.Description, "Description")
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 3, placeholder = "Description détaillée de la formation" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Categorie, "Catégorie")
                                @Html.EditorFor(model => model.Categorie, new { htmlAttributes = new { @class = "form-control", placeholder = "Categorie de la formation" } })
                                @Html.ValidationMessageFor(model => model.Categorie, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Duration, "Durée (heures)")
                                @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control", type = "number", placeholder = "Durée en heures" } })
                                @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-4">
                                @Html.LabelFor(model => model.Prix, "Prix")
                                @Html.EditorFor(model => model.Prix, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01", placeholder = "Prix de la formation" } })
                                @Html.ValidationMessageFor(model => model.Prix, "", new { @class = "text-danger" })
                            </div>
                        </div>

                       
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Créer la formation
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">Annuler</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

