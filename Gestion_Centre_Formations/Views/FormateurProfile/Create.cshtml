@model Gestion_Centre_Formations.Models.Formation

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Créer une nouvelle formation";
}

<!-- Header Start -->
<div class="container-fluid bg-primary py-5 mb-5 page-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">Créer une nouvelle formation</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a class="text-white" href="@Url.Action("Index", "Home")">Accueil</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Créer une formation</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->
<!-- Create Formation Form Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Créer une formation</h6>
            <h1 class="mb-5">Nouvelle Formation</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 wow fadeInUp" data-wow-delay="0.5s">
                @using (Html.BeginForm("Create", "FormateurProfile", FormMethod.Post, new { enctype = "multipart/form-data", @class = "bg-light p-5 rounded shadow" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3 row">
                        <label for="Titre" class="col-sm-4 col-form-label">Titre</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Titre, new { @class = "form-control", placeholder = "Titre de la formation" })
                            @Html.ValidationMessageFor(m => m.Titre, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="Description" class="col-sm-4 col-form-label">Description</label>
                        <div class="col-sm-8">
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3, placeholder = "Description détaillée de la formation" })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="Categorie" class="col-sm-4 col-form-label">Catégorie</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Categorie, new { @class = "form-control", placeholder = "Catégorie de la formation" })
                            @Html.ValidationMessageFor(m => m.Categorie, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="Duration" class="col-sm-4 col-form-label">Durée (heures)</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", type = "number", placeholder = "Durée en heures" })
                            @Html.ValidationMessageFor(m => m.Duration, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="Prix" class="col-sm-4 col-form-label">Prix</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Prix, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Prix de la formation" })
                            @Html.ValidationMessageFor(m => m.Prix, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="ImageFile" class="col-sm-4 col-form-label">Image</label>
                        <div class="col-sm-8">
                            <input type="file" name="ImageFile" class="form-control" />
                            @Html.ValidationMessage("ImageFile", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-2"></i>Créer la formation
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Create Formation Form End -->

<style>
    .bg-gradient-primary {
        background: linear-gradient(to right, #0D6EFD 0%, #4792ff 100%);
    }

    .form-control {
        border-radius: 1.25rem;
        box-shadow: none;
        border: 1px solid #d1d3e2;
        font-size: 1rem;
    }

        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }

    .col-form-label {
        font-weight: bold;
        color: #4e73df;
    }

    .btn-primary {
        border-radius: 1.25rem;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #4e73df;
            color: #fff;
        }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .shadow {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .rounded {
        border-radius: 1.25rem !important;
    }
</style>
