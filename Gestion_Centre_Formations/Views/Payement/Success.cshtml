@{
    ViewBag.Title = "Payment Success";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .success-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f9;
        }

        .success-message {
            text-align: center;
            padding: 20px;
            background: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .success-icon {
            font-size: 50px;
            color: #28a745;
        }

        .redirect-message {
            margin-top: 10px;
            font-size: 14px;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-message">
            <div class="success-icon">
                <i class="fa fa-check-circle"></i>
            </div>
            <h2>Payment Processed Successfully</h2>
            <p>Your payment has been processed and is now awaiting admin approval.</p>
            <p class="redirect-message">You will be redirected shortly...</p>
        </div>
    </div>

    <script>
        setTimeout(() => {
            window.location.href = '@Url.Action("Index", "Formations")';
        }, 5000);
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/js/font-awesome.min.js"></script>
</body>
</html>
