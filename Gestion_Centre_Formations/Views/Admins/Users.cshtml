@model Gestion_Centre_Formations.Models.AdminPage

@{
    Layout = "~/Views/Shared/_HeaderPanel.cshtml";
    ViewBag.Title = "Users";
}

<div class="sb2-2-2">
    <ul>
        <li>
            <a href="@Url.Action("Index", "Admins")"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#"> Users</a>
        </li>
        <li class="page-back">
            <a href="@Url.Action("Index", "Admins")"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
        </li>
    </ul>
</div>
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>Student Details</h4>
                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover" id="tablesSimple">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Id</th>
                                    <th>Status</th>
                                    <th>View</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var participant in Model.Participants)
                                {
                                    <tr>
                                        <td>
                                            <a href="#"><span class="list-enq-name">@participant.Nom @participant.Prenom</span></a>
                                        </td>
                                        <td>@participant.NumTel</td>
                                        <td>@participant.Email</td>
                                        <td>@participant.ParticipantID</td>
                                        <td>
                                            <span class="label label-success">Active</span>
                                        </td>
                                        <td><a href="@Url.Action("ProfileUser", "Admin", new { id = participant.ParticipantID })" class="ad-st-view">View</a></td>
                                        <td>
                                            <a href="@Url.Action("EditUser", "Admins", new { id = participant.ParticipantID })" class="ad-st-view">Edit</a>
                                            <a href="@Url.Action("DeleteUser", "Admins", new { id = participant.ParticipantID })" class="ad-st-view" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>Instructor Details</h4>
                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover" id="tablesSimple">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Id</th>
                                    <th>Speciality</th>
                                    <th>Couses</th>
                                    <th>Status</th>
                                    <th>View</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Formateurs in Model.Formateurs)
                                {
                                    <tr>
                                        <td>
                                            <a href="#"><span class="list-enq-name">@Formateurs.Nom @Formateurs.Prenom</span></a>
                                        </td>
                                        <td>@Formateurs.NumTel</td>
                                        <td>@Formateurs.Email</td>
                                        <td>@Formateurs.FormateurID</td>
                                        <td>@Formateurs.Specialisation</td>
                                        <td>@Formateurs.NbrFormations</td>
                                        <td>
                                            <span class="label label-success">Active</span>
                                        </td>
                                        <td><a href="@Url.Action("EditUser", "Admin", new { id = Formateurs.FormateurID })" class="ad-st-view">View</a></td>
                                        <td>
                                            <a href="@Url.Action("EditUser", "Admins", new { id = Formateurs.FormateurID })" class="ad-st-view">Edit</a>
                                            <a href="@Url.Action("DeleteUser", "Admins", new { id = Formateurs.FormateurID })" class="ad-st-view" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Import jQuery before materialize.js-->
<script src="~/assets/js/admain.min.js"></script>
<script src="~/assets/js/bootstrap.min.js"></script>
<script src="~/assets/js/materialize.min.js"></script>
<script src="~/assets/js/custom.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
<script src="~/assets/js/datatables-simple-demo.js"></script>

