            </li>
            <li>
                <div class="dash-book dash-b-4">
                    <h5>Enquiry</h5>
                    <h4>24</h4>
                    <a href="#">View more</a>
                </div>
            </li>
        </ul>
    </div>
</div>

<!--== User Details ==-->
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>Student Details</h4>
                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover" id="tablesSimple">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Id</th>
                                    <th>Status</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var participant in Model.Participants)
                                {
                                    <tr>
                                        <td>
                                            <a href="#"><span class="list-enq-name">@participant.Nom @participant.Prenom</span></a>
                                        </td>
                                        <td>@participant.NumTel</td>
                                        <td>@participant.Email</td>
                                        <td>@participant.ParticipantID</td>
                                        <td>
                                            <span class="label label-success">Active</span>
                                        </td>
                                        <td><a href="@Url.Action("ProfileUser", "Admin", new { id = participant.ParticipantID })" class="ad-st-view">View</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--== Courses Details ==-->
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>Course Details</h4>
                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Course Name</th>
                                    <th>Category</th>
                                    <th>Durations</th>
                                    <th>Prix</th>
                                    <th>Total Students</th>
                                    <th>Status</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var formation in Model.Formations)
                                {
                                    <tr>
                                        <td>
                                            <a href="admin-student-details.html"><span class="list-enq-name">@formation.Titre</span><span class="list-enq-city">@formation.Description</span></a>
                                        </td>
                                        <td>@formation.Categorie</td>
                                        <td>@formation.Duration</td>
                                        <td>@formation.Prix</td>
                                        <td>@(formation.FormationParticipants != null ? formation.FormationParticipants.Count : 0)</td>
                                        <td>
                                            <span class="label label-success">Active</span>
                                        </td>
                                        <td><a href="admin-student-details.html" class="ad-st-view">View</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

