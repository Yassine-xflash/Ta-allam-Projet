    </ul>
</div>
<!--== DASHBOARD INFO ==-->
<div class="sb2-2-1">
    <h2>Admin Dashboard</h2>
    <div class="db-2">
        <ul>
            <li>
                <div class="dash-book dash-b-1">
                    <h5>All Courses</h5>
                    <h4>@Model.FormationsCount</h4>
