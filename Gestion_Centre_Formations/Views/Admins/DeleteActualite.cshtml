@model Gestion_Centre_Formations.Models.Actualites

@{
    Layout = "~/Views/Shared/_HeaderPanel.cshtml";
    ViewBag.Title = "Confirm Delete";
}

<div class="sb2-2-2">
    <ul>
        <li>
            <a href="@Url.Action("Index", "Admins")"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#">Confirm Delete</a>
        </li>
        <li class="page-back">
            <a href="@Url.Action("Index", "Admins")"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
        </li>
    </ul>
</div>
<!-- Delete Confirmation -->
<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>Confirm Delete</h4>
                </div>
                <div class="bor">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete this item?
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Actualite Details</h5>
                            <dl class="dl-horizontal">
                                <dt>Title:</dt>
                                <dd>@Model.Title</dd>
                                <dt>Content:</dt>
                                <dd>@Model.Content</dd>
                                <dt>Date:</dt>
                                <dd>@Model.Date.ToString("yyyy-MM-dd")</dd>
                                <dt>Views:</dt>
                                <dd>@Model.Views</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5>Image</h5>
                            <div class="list-img" style="width: 300px; height: 300px; overflow: hidden; display: flex; justify-content: center; align-items: center;">
                                @{
                                    var imageName = Model.Title.Replace(" ", "-").ToLower();
                                }
                                <img src="~/assets/images/Actualite/@(imageName).jpg" alt="Image for @Model.Title" style="width: 100%; height: 100%; object-fit: cover;" />
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm("DeleteActualite", "Admins", new { id = Model.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            <button type="submit" class="btn btn-danger">Yes, Delete</button>
                            <a href="@Url.Action("Actualites", "Admins")" class="btn btn-secondary">Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>