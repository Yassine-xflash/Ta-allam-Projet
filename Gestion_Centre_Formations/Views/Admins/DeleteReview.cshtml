@model Gestion_Centre_Formations.Models.ReviewView

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Review";
}

<div class="container py-5">
    <h2 class="text-center">Delete Review</h2>
    <p class="text-center text-danger">Are you sure you want to delete this review? This action cannot be undone.</p>

    <div class="row justify-content-center mt-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Review Details</h4>
                </div>
                <div class="card-body">
                    <p><strong>Formation Title:</strong> @Model.FormationTitle</p>
                    <p><strong>Participant Name:</strong> @Model.ParticipantName</p>
                    <p><strong>Rating:</strong> @Model.Rating</p>
                    <p><strong>Comment:</strong> @Model.Comment</p>
                </div>
                <div class="card-footer text-center">
                    <form method="post" action="@Url.Action("DeleteReview", "Admins", new { id = Model.FormationParticipantID })">
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                        <a href="@Url.Action("Reviews", "Admins")" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
