@model IEnumerable<Gestion_Centre_Formations.Models.CertificateView>

@{
    ViewBag.Title = "My Certifications";
}

<!-- Certifications Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">My Achievements</h6>
            <h1 class="mb-5">My Certifications</h1>
        </div>

        <div class="row g-4">
            <!-- Course Certificates Section -->
            <div class="col-12">
                <div class="course-list">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var certificate in Model)
                        {
                            <div class="course-item mb-4 p-4 border rounded hover-shadow">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-2">
                                            <a href="@Url.Action("Details", "Certificate", new { id = certificate.Certificate?.CertificateID })"
                                               class="text-decoration-none text-dark">@(certificate.CourseTitle ?? "No Title")</a>
                                        </h5>
                                        @if (certificate.Certificate != null)
                                        {
                                            <p class="mb-1 text-muted">
                                                <i class="fa fa-calendar me-2"></i>Issued on: @certificate.Certificate.DateIssued.ToShortDateString()
                                            </p>
                                        }
                                    </div>
                                    <div>
                                        @if (certificate.Certificate != null && certificate.Certificate.CertificateID != null)
                                        {
                                            <a href="@Url.Action("ViewCertificate", "Certificate", new { hashId = certificate.CertificateHash })"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fa fa-eye me-2"></i>View Certificate
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Certificate Issued</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info text-center" role="alert">
                            <i class="fa fa-info-circle me-2"></i>You don't have any certifications yet. Complete a course to earn one!
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Certifications End -->
<!-- Custom CSS for Hover Effect -->
<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

        .hover-shadow:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }

    .btn-outline-primary {
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-outline-primary:hover {
            background-color: #0d6efd;
            color: #fff;
        }

    .alert-info {
        background-color: #e9f5ff;
        border-color: #b6e0fe;
        color: #0c5460;
    }
</style>
